openapi: 3.0.1
info:
  title: Core API
  description: The worlds funnest little API
  version: 1.0.0
servers:
  - url: 'http://localhost:3000/'
tags:
- name: "categories"
  description: "Everything about the categories"
- name : "products"
  description: "Everything about the products"
paths:
  /categories:
    get:
      tags:
      - "categories"
      description: Get all categories
      responses:
        '200':
          description: Returned a list of categories
          content:
            'application/json':
              schema:
                $ref: '#/components/schemas/categories'
    post:
      tags:
      - "categories"
      description: Add new category
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                displayName:
                  type: string
                name:
                  type: string
                description:
                  type: string
      responses:
        '201':
          description: Return the added category
          content:
            application/json; charset=utf-8:
              schema:
                type: string
              examples: 
                schema:
                  $ref: '#/components/schemas/categories'
  /categories/{id}:
    put:
      tags:
      - "categories"
      description: Add a new category
      parameters: 
      - in: path
        name: id
        required: true
        schema:
          $ref: "#/components/schemas/categories"
      responses:
        '200':
          description: Returned the updated category
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/categories'
    delete:
      tags:
      - "categories"
      description: Delete a category
      parameters: 
      - in: path
        name: id
        required: true
        schema:
            type: integer
            minimum: 1
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                type: object
  /products:
    get:
      tags:
      - "products"
      description: Get all products
      responses:
        '200':
          description: Returned a list of products
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/products'
    post:
      tags:
      - "products"
      description: Add a new product
      requestBody:
        content:
          application/json:
            schema:
              type: object
              properties:
                displayName:
                  type: string
                category:
                  type: string
                name:
                  type: string
                description:
                  type: string
      responses:
        '201':
          description: Returned the created product
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/products'
  /products/{id}:
    put:
      tags:
      - "products"
      description: Add a product
      parameters: 
      - in: path
        name: id
        required: true
        schema:
          type: integer
          minimum: 1
      responses:
        200:
          description: "Return the updated product"
          content:
           application/json:
              schema:
                $ref: '#/components/schemas/products'
    delete:
      tags:
      - "products"
      description: Delete a product
      parameters: 
      - in: path
        name: id
        required: true
        schema:
          type: integer
          minimum: 1
      responses:
        '200':
          description: OK
          content:
            application/json:
              schema:
                type: object
  
components:
  schemas:
    categories:
      type: object
      properties:
        id:
          type: integer
        displayName:
          type: string
        name:
          type: string
        description:
          type: string
    products:
      type: object
      properties:
        id:
          type: integer
        name:
          type: string
        category:
          type: string
        displayName:
          type: string
        description:
          type: string